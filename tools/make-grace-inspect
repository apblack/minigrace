#!/bin/sh
if [ $# -ne 3 ]
then
    echo "$0 needs three arguments: <module_path> <in_file> <out_file>"
    exit 1
fi
MODULE_PATH=$1
IN_FILE=$2
OUT_FILE=$3
/bin/rm -f ${OUT_FILE}
sed -e "s|#!/usr/bin/env node|#!`which node`  --inspect-brk|;s|@MODULE_PATH@|${MODULE_PATH}/|;3,4c\\
// This file was generated by $0 from ${IN_FILE}; DO NOT EDIT!\\
// Executes compiled grace at the command line under the Chrome debugger" ${IN_FILE} > ${OUT_FILE}
chmod a+x-w ${OUT_FILE}
